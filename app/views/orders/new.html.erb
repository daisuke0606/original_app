      <%# <%= form_with model: @order, id: 'charge-form', url: item_orders_path, class: 'buy-btn',local: true do |f| %>
        <%# <%= f.submit "購入" ,class:"purchase-click" %>
      <%# <% end %>
    <%# </div> %>
  </div>
</div>