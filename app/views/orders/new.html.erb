<a class="home" href="/">Shopping</a>
<div class="confirmation">
  <h2 class="confirmation-title">購入確認画面</h2>
  <div class="confirmation-view">
    <div class="confirmation-image">
      <div class="confirmation-name">
        <%= @item.buy %>
      </div>
      <div class="confirmation-img">
        <%= image_tag @item.image, class: 'product-image' %>
      </div>
    </div>
  </div>
  <div class="confirmation-price">
      ¥<span class="price-color"><%= @item.price %></span>-&emsp;<%= @item.delivery_fee.name %>
  </div>

  <%= form_with model: @order, id: 'charge-form', url: item_orders_path, class: 'transaction-form-wrap',local: true do |f| %>
  <%# <%= render 'shared/error_messages', model: @order %>
  <div class="errors-box">
      <%= render 'devise/shared/error_messages', model: f.object %>
  </div>

    <div class="address-information">
      <h2 class="confirmation-title">発送先情報をを入力してください</h2>
      <div class="form-group">
        <div class='form-text-container'>
          <label class="form-text">郵便番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'zip01', class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"8", onKeyUp:"AjaxZip3.zip2addr(this,'','pref01','addr01');" %>
        <%# <input type="text" name="zip01" size="10" maxlength="7" placeholder="例）1234567(ハイフン無しで可)" onKeyUp="AjaxZip3.zip2addr(this,'','pref01','addr01');"> %>
        <p class="post-color">※&emsp;動作しない場合は一度リロードしなおしてください</p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">都道府県</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'pref01', class:"input-default", id:"city", placeholder: "例）横浜市緑区" %>
        <%# <input type="text" name="pref01" size="20"> %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">市区町村</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'add01', class:"input-default", id:"city", placeholder: "例）横浜市緑区" %>
        <%# <input type="text" name="addr01" size="60"> %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">番地</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'block', class:"input-default", id:"addresses", placeholder:"例）1-2-3"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">建物名</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_field 'building', class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">電話番号</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'phone', class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
      </div>
    </div>

    <div class="card-information">
      <h2 class="confirmation-title">カード情報を入力してください</h2>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">カード情報</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field 'number', class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
        <div class='available-card'>
          <%# <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%# <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%# <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%# <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_area 'exp_month', class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
          <p>月</p>
          <%= f.text_area 'exp_year', class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">セキュリティコード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field "cvc",class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
      <div class="last-purchase-btn">
        <%= f.submit "購入" ,class:"purchase-click" %>
      </div>
    </div>
  <% end %>

