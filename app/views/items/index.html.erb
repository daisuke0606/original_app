<%= render "items/header" %>

<div class="container">
  <div class="main">

    <div class="top-image">
      <%= image_tag 'main1.jpg', class: "main-image" %>
      <p>誰でも簡単に<span>出品</span>・<span>購入</span>できる</p>
    </div>

    <div class="main-image-link">
        <div class="buy">
          <a class="" href="/items/new">出品</a>
        </div>
        <div class="sell">
          <a class="" href="">購入</a>
        </div>
    </div>

    <div class="sub-image-link">
      <h1 class="title"><span>身の回りの多くの商品を出品できる</span></h1>
      <div class="item-info">
        <%= image_tag 'camera.png', class: "center-image" %>
        <%= image_tag 'audio.png', class: "center-image" %>
        <%= image_tag 'stapler.png', class: "center-image" %>
        <%= image_tag 'suts.png', class: "center-image" %>
        <%= image_tag 'shose.png', class: "center-image" %>
      </div>
    </div>

    <div class="product-contents">
      <h2 class="new-product-title">-New Product-</h2>
        <% @items.each do |item| %>
        <div class="product-pic">
          <div class="user-name">
            <p class="item-down">-出品者-</p>
            <%= item.user.nickname %>
          </div>

          <div class="item-img">
            <%= image_tag item.image.variant(combine_options:{gravity: :center, resize:"200x200", crop:"200x200+0+0"}).processed, class: "product-image" %>
          </div>

          <div class="item-name">
            <p class="item-down">-商品名-</p>
            <%= item.name %>
          </div>

          <div class="item-price">
            <p class="item-down">-金額-</p>
            <span><%= item.price %>円<br>(税込み)</span>
          </div>

          <div class="item-btn">
              <% if user_signed_in? && current_user.id != item.user_id %>
                <%= link_to '購入', "#", method: :post, class:'buy-btn-a' %>
              <% end %>

              <% if user_signed_in? && current_user.id == item.user_id %>
                <%= link_to '削除', item_path(item.id), method: :delete, class:'buy-btn-b' %>
                <%= link_to '編集', edit_item_path(item.id), method: :get, class:'buy-btn-c' %>
              <% end %>
          </div>
        </div>
        <% end %>
    </div>

  </div>
</div>
