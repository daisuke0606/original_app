<a class="home" href="/">Shopping</a>
<div class="items-sell-contents">
  <div class="items-sell-main">
    <h1 class="items-sell-title">商品の情報を入力</h1>
    <br>
    <br>
    <%= form_with model: @item, local: true do |f| %>
    <div class="errors-box">
      <%= render 'devise/shared/error_messages', model: f.object %>
    </div>
    <div class="img-upload">
      <div class="weight-bold-text">
        コーディネイト画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
        <br>
        <br>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        売りたい商品
        <span class="indispensable">必須</span>
        <p>※売りたい商品名を記入しよう！</p>
        <p>例：tops/botoms(商品が２つある場合）</p>
      </div>
      <%= f.text_field :buy, class:"fashion-text", id:"item-name", placeholder:"商品名（必須 20文字まで)", maxlength:"20" %>
      <br>
      <br>
      <div class="weight-bold-text">
        商品の状態
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      <br>
      <br>
      <div class="items-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :info, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"500" %>
        <br>
        <br>
      </div>
      <div class="weight-bold-text">
        撮影地
        <span class="form-any">任意</span>
      </div>
      <%= f.text_field :address_map, class:"fashion-text", id:"item-name", placeholder:"撮影地の住所を入力してください。", maxlength:"20" %>
      <br>
      <br>
    </div>
    <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          Cap
          <span class="form-any">任意</span>
        </div>
        <%# <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box"}) %>
        <%= f.text_field :cap, class:"fashion-text", id:"item-name", placeholder:"ブランド名（必須 20文字まで)", maxlength:"20" %>
        <br>
        <br>
        <div class="weight-bold-text">
          Tops
          <span class="form-any">任意</span>
        </div>
        <%# <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box"}) %>
        <%= f.text_field :tops, class:"items-text", id:"item-name", placeholder:"ブランド名（必須 20文字まで)", maxlength:"20" %>
        <br>
        <br>
        <div class="weight-bold-text">
          Botoms
          <span class="form-any">任意</span>
        </div>
        <%# <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box"}) %>
        <%= f.text_field :botoms, class:"items-text", id:"item-name", placeholder:"ブランド名（必須 20文字まで)", maxlength:"20" %>
        <br>
        <br>
        <div class="weight-bold-text">
          Shose
          <span class="form-any">任意</span>
        </div>
        <%# <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box"}) %>
        <%= f.text_field :shoes, class:"items-text", id:"item-name", placeholder:"ブランド名（必須 20文字まで)", maxlength:"20" %>
        <br>
        <br>
        <div class="weight-bold-text">
          Accessories
          <span class="form-any">任意</span>
        </div>
        <%# <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"select-box"}) %>
        <%= f.text_field :accessories, class:"items-text", id:"item-name", placeholder:"ブランド名（必須 20文字まで)", maxlength:"20" %>
        <br>
        <br>
      </div>

      <div class="items-detail">
        <div class="weight-bold-text question-text">
          <span>配送について</span>
        </div>
        <div class="form">
          <div class="weight-bold-text">
            配送料の負担
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:delivery_fee_id, DeliveryFee.all, :id, :name, {}, {class:"select-box"}) %>
        <br>
        <br>
        <div class="weight-bold-text">
          発送元の地域
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefectures_id, Prefectures.all, :id, :name, {}, {class:"select-box"}) %>
        <br>
        <br>
        <div class="weight-bold-text">
          発送までの日数
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:shipping_days_id, ShippingDays.all, :id, :name, {}, {class:"select-box"}) %>
        <br>
        <br>
        <div class="weight-bold-text">
          配達業者
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:trader_name_id, TraderName.all, :id, :name, {}, {class:"select-box"}) %>
        <br>
        <br>
        <div class="sell-price">
        <div class="weight-bold-text question-text">
        <span>Price<br></span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span></span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
        <div class="price-content">
          <span>販売手数料 (10%)</span>
          <span>
            <span id='add-tax-price'></span>円
          </span>
        </div>
        <div class="price-content">
          <span>販売利益</span>
          <span>
            <span id='profit'></span>円
        </div>
        </span>
      </div>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
    </div>
    <%=link_to 'HOME', root_path, class:"back-btn" %>
      </div>
    </div>
    </div>
  </div>
</div>
<% end %>