<h1>新規登録</h1>
<%= render "devise/shared/error_messages", resource: resource %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>  
  

<div class="form">

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder:"例) ◯◯くん" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例) sampre@gmail.com（PC・携帯どちらでも可）" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "password", placeholder:"文字" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="field">
    <%= f.label :名字 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"例) 山田" %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"例) 太郎" %>
  </div>

  <div class="field">
    <%= f.label :名字（カナ） %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"例) ヤマダ" %>
  </div>

  <div class="field">
    <%= f.label :名前（カナ） %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"例) タロウ" %>
  </div>

  <div class='input-birth-wrap'>
    <%= raw sprintf(
      f.date_select(:birth, class:'select-birth', id:"birth-date", use_month_numbers: true, prompt:'--', start_year: 1930, end_year: (Time.now.year - 5), date_separator: '%s'), "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
